{
  "env": {
    "es6": true,
    "mocha": true
  },

  "parserOptions": {
    "sourceType": "module"
  },

  "extends": "standard",

  "rules": {
    "semi": ["error", "always"],
    "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true, "ImportDeclaration": true } }],
    "promise/param-names": 0
  }
}
